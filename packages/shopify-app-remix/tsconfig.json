{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/ts",
    "rootDir": "src",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test/*",
    "**/__tests__/*",
    "**/*.example.ts",
    "**/*.example.*.ts",
    "**/*.example.tsx",
    "**/*.example.*.tsx"
  ]
}
